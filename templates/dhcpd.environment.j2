{{ ansible_managed|comment(decoration='# ') }}

# Path to dhcpd's config file
#DHCPDv4_CONF=/etc/dhcp/dhcpd.conf
#DHCPDv6_CONF=/etc/dhcp/dhcpd6.conf
DHCPD_CONF={{ dhcpd__configuration_file }}

# Path to dhcpd's PID file
#DHCPDv4_PID=/var/run/dhcpd.pid
#DHCPDv6_PID=/var/run/dhcpd6.pid
DHCPD_PID={{ dhcpd__pid_file }}

# Additional options to start dhcpd with.
#       Don't use options -cf or -pf here; use DHCPD_CONF/ DHCPD_PID instead
OPTIONS="-lf {{ dhcpd__leases_file }}"

# On what interfaces should the DHCP server (dhcpd) serve DHCP requests?
#INTERFACESv4=""
#INTERFACESv6=""
INTERFACES="{% if dhcpd__listen_interfaces is string %}{{ dhcpd__listen_interfaces }}{% else %}{{ dhcpd__listen_interfaces|join(' ') }}{% endif %}"
